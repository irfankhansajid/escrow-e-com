# Environment Variables
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/escrow-ecom-bd
DB_NAME=escrow_ecom_bangladesh

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Cloudinary for Image Upload
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# Email Configuration
EMAIL_FROM=noreply@escrowecombd.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Payment Gateway (Stripe for international, local BD gateway)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable

# SSL Commerz (Popular in Bangladesh)
SSLCOMMERZ_STORE_ID=your-store-id
SSLCOMMERZ_STORE_PASSWORD=your-store-password
SSLCOMMERZ_IS_LIVE=false

# Escrow Settings
ESCROW_HOLD_DAYS=7
REFUND_WINDOW_DAYS=30

# Admin Settings
ADMIN_EMAIL=admin@escrowecombd.com
SUPER_ADMIN_PASSWORD=change-this-password